@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label asp-for="Name" ></label>
        <input class="form-control" asp-for="Name"/>
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label asp-for="Line1" ></label>
        <input class="form-control" asp-for="Line1"/>
    </div>
    <div class="form-group">
        <label asp-for="Line2" ></label>
        <input class="form-control" asp-for="Line2"/>
    </div>
    <div class="form-group">
        <label asp-for="Line3" ></label>
        <input class="form-control" asp-for="Line3"/>
    </div>
    <div class="form-group">
        <label asp-for="City" ></label>
        <input class="form-control" asp-for="City"/>
    </div>
    <div class="form-group">
        <label asp-for="State" ></label>
        <input class="form-control" asp-for="State"/>
    </div>
    <div class="form-group">
        <label asp-for="Zip" ></label>
        <input class="form-control" asp-for="Zip"/>
    </div>
    <div class="form-group">
        <label asp-for="Country" ></label>
        <input class="form-control" asp-for="Country"/>
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap"/> Gift wraps these items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>